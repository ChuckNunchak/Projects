@model WebApplication1.Models.TypeOfStorage

@{
    ViewData["Title"] = "Добавление";
}

<h2>Добавление</h2>

<h4>Типы складских помещений</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfTypeOfStorages" class="control-label"></label>
                <input asp-for="NameOfTypeOfStorages" class="form-control" />
                <span asp-validation-for="NameOfTypeOfStorages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypesOfRawMaterialsInStorage" class="control-label"></label>
                <input asp-for="TypesOfRawMaterialsInStorage" class="form-control" />
                <span asp-validation-for="TypesOfRawMaterialsInStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FireProtection" /> @Html.DisplayNameFor(model => model.FireProtection)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SpecialEquipment" /> @Html.DisplayNameFor(model => model.SpecialEquipment)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Humidity" class="control-label"></label>
                <input asp-for="Humidity" class="form-control" />
                <span asp-validation-for="Humidity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
